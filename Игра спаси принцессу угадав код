if guess == secret_code:  # –ï—Å–ª–∏ —É–≥–∞–¥–∞–ª
        print("–¢—ã —Å–ø–∞—Å –ø—Ä–∏–Ω—Ü–µ—Å—Å—É! üéâ")  # –ü–æ–±–µ–¥–∞
        break                 # –í—ã—Ö–æ–¥ –∏–∑ —Ü–∏–∫–ª–∞
    else:
        attempts -= 1         # –û—Ç–Ω–∏–º–∞–µ–º –ø–æ–ø—ã—Ç–∫—É
        # –ü–æ–¥—Å–∫–∞–∑–∫–∞ (–±–æ–ª—å—à–µ/–º–µ–Ω—å—à–µ):
        print("–ù–µ–≤–µ—Ä–Ω–æ! " + ("–ö–æ–¥ –±–æ–ª—å—à–µ." if guess < secret_code else "–ö–æ–¥ –º–µ–Ω—å—à–µ."))
        if attempts == 4:
            print(f"–ü–æ–¥—Å–∫–∞–∑–∫–∞: –∫–æ–¥ –Ω–∞—á–∏–Ω–∞–µ—Ç—Å—è —Å {str(secret_code)[1]}") # –î–æ–±–∞–≤–∏–ª –ø–æ–¥—Å–∫–∞–∑–∫–∏ –ø–æ—Å–ª–µ 2 –∏ 4 –ø–æ–ø—ã—Ç–æ–∫, –∞ —Ç–æ –≤—ã—à–ª–æ —Å–ª–∏—à–∫–æ–º —Ç—è–∂–µ–ª–æ.
                    
        if attempts == 2:
            print(f"–ü–æ–¥—Å–∫–∞–∑–∫–∞: –≤—Ç–æ—Ä–∞—è —Ü–∏—Ñ—Ä–∞ –∫–æ–¥–∞ {str(secret_code)[0]}")
else:  # –ï—Å–ª–∏ —Ü–∏–∫–ª –∑–∞–≤–µ—Ä—à–∏–ª—Å—è –±–µ–∑ break
    print("–ü—Ä–∏–Ω—Ü–µ—Å—Å–∞ –æ—Å—Ç–∞–ª–∞—Å—å –≤ –±–∞—à–Ω–µ... üò¢")

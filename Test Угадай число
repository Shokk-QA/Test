import java.util.Random;
import java.util.Scanner;

class GuessNumber {
    public static void main(String[] args) {
        Random random = new Random();
        int secretNumber = random.nextInt(10) + 1; // –°–µ–∫—Ä–µ—Ç–Ω–æ–µ —á–∏—Å–ª–æ –æ—Ç 1 –¥–æ 10
        Scanner scanner = new Scanner(System.in);
        int attempts = 3; // –ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø–æ–ø—ã—Ç–æ–∫
        boolean hasWon = false; // –§–ª–∞–≥ –¥–ª—è –æ—Ç—Å–ª–µ–∂–∏–≤–∞–Ω–∏—è –ø–æ–±–µ–¥—ã

        System.out.println("–£–≥–∞–¥–∞–π —á–∏—Å–ª–æ –æ—Ç 1 –¥–æ 10. –£ —Ç–µ–±—è " + attempts + " –ø–æ–ø—ã—Ç–∫–∏.");

        // –¶–∏–∫–ª –¥–ª—è —É–≥–∞–¥—ã–≤–∞–Ω–∏—è —á–∏—Å–ª–∞
        for (int i = 1; i <= attempts; i++) {
            System.out.print("–ü–æ–ø—ã—Ç–∫–∞ " + i + ": ");
            int userGuess = scanner.nextInt();

            if (userGuess == secretNumber) {
                System.out.println("–¢—ã –≤—ã–∏–≥—Ä–∞–ª! üéâ");
                hasWon = true;
                break; // –í—ã—Ö–æ–¥ –∏–∑ —Ü–∏–∫–ª–∞, –µ—Å–ª–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å —É–≥–∞–¥–∞–ª
            } else if (userGuess < secretNumber) {
                System.out.println("–ó–∞–≥–∞–¥–∞–Ω–Ω–æ–µ —á–∏—Å–ª–æ –±–æ–ª—å—à–µ.");
            } else {
                System.out.println("–ó–∞–≥–∞–¥–∞–Ω–Ω–æ–µ —á–∏—Å–ª–æ –º–µ–Ω—å—à–µ.");
            }
        }

        // –ü—Ä–æ–≤–µ—Ä–∫–∞, –µ—Å–ª–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –Ω–µ —É–≥–∞–¥–∞–ª
        if (!hasWon) {
            System.out.println("–ù–µ —É–≥–∞–¥–∞–ª. –ü—Ä–∞–≤–∏–ª—å–Ω–æ–µ —á–∏—Å–ª–æ: " + secretNumber);
        }

        scanner.close(); // –ó–∞–∫—Ä—ã–≤–∞–µ–º Scanner
    }
}
